<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Certificate.
    -->
    <changeSet id="20230522174116-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="certificate_father_name"
                                 baseTableName="certificate"
                                 constraintName="fk_certificate__certificate_father_name"
                                 referencedColumnNames="father_name"
                                 referencedTableName="certificate"/>

        <addForeignKeyConstraint baseColumnNames="certificate_mother_name"
                                 baseTableName="certificate"
                                 constraintName="fk_certificate__certificate_mother_name"
                                 referencedColumnNames="mother_name"
                                 referencedTableName="certificate"/>

        <addForeignKeyConstraint baseColumnNames="certificate_married_to"
                                 baseTableName="certificate"
                                 constraintName="fk_certificate__certificate_married_to"
                                 referencedColumnNames="married_to"
                                 referencedTableName="certificate"/>
    </changeSet>
</databaseChangeLog>
